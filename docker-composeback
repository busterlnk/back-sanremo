version: '3'

networks:
  app:
  traefik:
    external: true
    name: traefik

services:
  php:
    image: php:8.2-fpm # Aseg?rate de usar la versi?n que necesites
    build:
      context: .
      dockerfile: Dockerfile
    volumes:
      - ./docker/php/www.conf:/etc/php8/php-fpm.d/www.conf:rw
      # - ./files/islas3/:/var/www/
      - ./docker/php:/var/www
    # ports:
    #   - 23771:2377
    networks:
      # - traefik
      - app
    profiles:
      - web
  nginx:
    image: nginx:stable-alpine
    build:
      context: docker/nginx/
      dockerfile: Dockerfile
    ports:
      - '8084:80'
    volumes:
      # - ./files/islas3/:/var/www/code/
      #- ./docker/nginx/conf/nginx.conf:/etc/nginx/nginx.conf:rw
      # - ./docker/nginx/prod-nginx.conf:/etc/nginx/nginx.conf
      - ./docker/nginx:/var/www
    labels:
      - traefik.enable=true
      - traefik.docker.network=traefik
      - traefik.http.routers.sanremo.rule=Host(`sanremo.deswebislas.com`) #url para acceder al backend
      - traefik.http.routers.sanremo.entrypoints=websecure
      - traefik.http.routers.sanremo.tls=true
      # - traefik.http.routers.videochat.middlewares=hstsheader@file
      - traefik.http.services.sanremo.loadbalancer.server.port=80
    networks:
      - traefik
      - app
    depends_on:
      - php
    profiles:
      - web
